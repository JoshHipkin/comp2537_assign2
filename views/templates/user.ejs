<li class="list-group-item">
    <%- user.name %> (<%- user.user_type %>)
    <form action="/promote" method="post">
        <input type="hidden" name="email" value="<%- user.email %>">
        <button class="btn btn-danger rounded-pill px-3 mt-2" type="submit">Promote to Admin
          </button>
    </form> 
    <form action="/demote" method="post">
        <input type="hidden" name="email" value="<%- user.email %>">
        <button class="btn btn-success rounded-pill px-3 mt-2" type="submit">Demote to User
          </button>
    </form>
  </li>